{
  "name": "csir-eoi-8119-firebase",
  "version": "1.0.0",
  "description": "CSIR EOI 8119 - Mining Safety Dashboard with Firebase",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "firebase:deploy": "firebase deploy",
    "docker:build": "docker build -t csireoi8119/safety-dashboard:latest .",
    "docker:push": "docker push csireoi8119/safety-dashboard:latest"
  },
  "keywords": [
    "csir",
    "eoi",
    "firebase",
    "mining",
    "safety"
  ],
  "author": "CSIR EOI Submission",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}